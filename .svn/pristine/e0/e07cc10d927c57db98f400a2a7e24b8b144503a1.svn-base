<div class="head-section clearfix gutterLR15">
	<h1 class=" pull-left">Dashboard</h1>
</div>
<hr>
<!-- Form section starts here -->
<div class="form-section">
	<h2>List of Jobs</h2>

	<table ng-table="vm.jobTableParams" class="table">
	    <tr ng-repeat="job in $data">
	        <td title="'Date'">
	        	<div class="date">
	        		<div class="date-inner">
	        			<div class="day">{{job.created | date:'dd'}}</div>
	        			<div class="month">{{job.created | date:'MM'}}</div>
	        		</div>
	        	</div>
	        </td>
	        <td title="'Title'">
	            <a ng-href="/hr/job-detail/{{job._id}}">{{job.title}}</a>
	        </td>
	        <td title="'Experience'">
	            {{job.experience.min}}-{{job.experience.max}} years
	        </td>
	        <td title="'Skills'">
	            {{vm.getSkills(job.skills)}}
	        </td>
	       <td title="'Matched Applicant(s)'">
	           <a href="#" class="applicants-count btn btn-primary">{{job.candidateCount}}<i class="fa fa-chevron-circle-right fa-3" aria-hidden="true"></i></a>
	        </td>
	    </tr>
	</table>

</div>

