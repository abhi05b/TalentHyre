(function() {
  'use strict';

  angular
    .module('candidates')
    .controller('DashboardController', DashboardController);

  DashboardController.$inject = ['$scope', 'jobs', 'tests', 'CandidatesService', '$stateParams', 'NgTableParams'];

  function DashboardController($scope, jobs, tests, CandidatesService, $stateParams, NgTableParams) {
    var vm = this;
    //vm.jobs = jobs;
    vm.tests = tests;
    vm.skills = [{'experience' : 5}];
    var _id = $stateParams.id || "57e683efb5560c14fc814109";

    vm.update = function(){
      var candidate = CandidatesService.query({ id:_id });
       candidate.$promise.then(function(data) {
        vm.data = data[0];
        console.log(data);
        vm.data.skills = vm.skills;
        CandidatesService.update({ id:_id}, vm.data);
      });
    }

    vm.jobTableParams = new NgTableParams({}, { dataset: jobs});

    vm.getSkills = function(skills){
      return skills.map(function(skill){
        return skill.name;
      }).join(',');
    };
    
    
